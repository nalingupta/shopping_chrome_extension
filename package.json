{
    "name": "shopping-chrome-extension",
    "version": "0.18.0",
    "scripts": {
        "build": "echo 'No build process needed for this extension'",
        "lint": "echo 'Linting completed - no linter configured'",
        "server": "cd server && python server.py",
        "server:dev": "cd server && uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
        "server:prod": "cd server && python server.py",
        "serve": "npm run server:dev",
        "test:server:health": "curl -sSf http://127.0.0.1:8000/api/v1/health | cat",
        "test:ws:smoke": "node chrome-extension/scripts/tests/ws_smoke.mjs",
        "test:extension:logs": "node chrome-extension/scripts/tests/console_assertions.mjs"
    },
    "type": "module",
    "dependencies": {},
    "devDependencies": {
        "ws": "^8.17.0",
        "node-fetch": "^3.3.2"
    }
}
